<p id="notice"><%= notice %></p>

<h1><%= MiningType.model_name.human %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('labels.description')%></th>
      <th><%= t('labels.acronym')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to t('labels.mining_type'), new_mining_type_path, class:"btn btn-primary" %>
<%= link_to t('labels.back'), welcome_index_path, class:"btn btn-light" %>

